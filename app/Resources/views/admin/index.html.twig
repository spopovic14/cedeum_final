{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">

        <h2>Upload slike</h2>

        <ul>
            <li><a href="admin/upload_image">Upload</a></li>
            <li><a href="admin/list_images">Lista slika</a></li>
        </ul>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <h2>Stranice</h2>

        <ul>
            {% for page in pages %}

            <li><a href="admin/pages/{{ page.id }}">{{ page.title }}</a></li>

            {% endfor %}
        </ul>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <h2>Projekti</h2>

        <p><a href="{{ path("new_project") }}">Dodaj novi</a></p>

        <ul>
            {% for project in projects %}

            <li><a href="admin/project/{{ project.id }}">{{ project.name }}</a></li>

            {% endfor %}
        </ul>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <h2>Dogadjaji</h2>

        <p><a href="{{ path("new_article") }}">Dodaj novi</a></p>

        <ul>
            {% for article in articles %}

            <li><a href="admin/article/{{ article.id }}">{{ article.title }}</a></li>

            {% endfor %}
        </ul>

    </div>
</div>

{% endblock %}
