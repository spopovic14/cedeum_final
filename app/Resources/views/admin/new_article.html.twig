{% extends 'base.html.twig' %}

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>

    <script type="text/javascript">
        //        CKEDITOR.replace( 'page_form_content' );
        CKEDITOR.disableAutoInline = true;
        CKEDITOR.inline( 'article_form_content' );
    </script>

{% endblock %}

{% block body %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">

                {{ form_start(form) }}

                {{ form_row(form.title) }}
                {{ form_row(form.picture) }}
                {{ form_row(form.description) }}
                {{ form_row(form.releaseDate) }}

                {{ form_row(form.content) }}

                <button type="submit" class="btn btn-primary" formnovalidate>Sacuvaj</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}