<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link href="{{ asset('CSS/custom.css') }}" rel="stylesheet">
    <title>Cedeum</title>

    {% block headscripts %}{% endblock %}
</head>

<body>
    <div class="navbar navbar-default" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <a class="navbar-brand" href="#">
                    <img class="logo img-responsive" src="{{ asset('/Images/logo.png') }}"></img>
                </a>
            </div>


            <!-- <div class="navbar-header"> -->

                <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <!-- <ul class="nav navbar-nav">
                        <li>
                            <a href="#">CEDEUM</a>
                        </li>
                    </ul> -->

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ path('homepage') }}">{{ 'home'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ url('about_page') }}">{{ 'about'|trans }}</a>
                        </li>
                        <li>
                            <a href="#">{{ 'projects'|trans }}</a>
                        </li>
                        <li>
                            <a href="#">{{ 'mater_terra'|trans }}</a>
                        </li>
                        <li>
                            <a href="#">{{ 'bitef'|trans }}</a>
                        </li>
                        <li>
                            <a href="#">{{ 'activities'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ url('contact_page') }}">{{ 'contact'|trans }}</a>
                        </li>

                        <div class="lang">
                            <!-- <li> -->
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}"><span class="flag-icon-en"></span></a>
                            <!-- </li>
                            <li> -->
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'rs'})) }}"><span class="flag-icon-rs"></span></a>
                            <!-- </li> -->
                        </div>
                    </ul>
                </div>

            <!-- </div> -->
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 header text-center">
                <div class="inner">
                    <p class="bord">CEDEUM</p>
                    <p class="bord-text">{{ 'cedeum'|trans }}</p>
                    <hr>
                    <p class="bord-text">{{ 'idea'|trans }}</p>
                </div>
            </div>
        </div>
    </div>

    {% block content %}
        <div class="container pb-32 pt-32">
            {% block body %}{% endblock %}
        </div>
    {% endblock %}

    <div class="container-fluid">
        <!-- Footer -->
        <div class="row">
            <!-- <div class="col-xs-12"> -->
                <footer class="footer">
                    <p>Copyright @2017</p>
                </footer>
            <!-- </div> -->
        </div>
    </div>

    {% block javascripts %}{% endblock %}
</body>
</html>
