{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">

                <p><a href="{{ path(app.request.attributes.get('_route'),
         app.request.attributes.get('_route_params')) }}/raw">Raw editor</a></p>
                <br/>

                {{ form_start(form) }}

                    <p>Srpski</p>
                    {{ form_row(form.title) }}
                    {{ form_row(form.content) }}
                    <br/>
                    <p>Engleski</p>
                    {{ form_row(form.titleEn) }}
                    {{ form_row(form.contentEn) }}

                    <button type="submit" class="btn btn-primary">Sacuvaj</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}
