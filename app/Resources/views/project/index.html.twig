{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <h1 class="text-center pb-18">{{ 'current_projects'|trans }}</h1>
        </div>
    </div>

            {% for project in projects %}

                <hr class="short-line mt-32 mb-32"/>

                <div class="row mb-18">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <img src="{{ asset('uploads/article_pictures/' ~ project.picture) }}" class="img-responsive img-rounded">
                    </div>

                    <div class="project-title col-xs-12 col-sm-6 col-md-8">
                        <div class="center-block">
                            <h3 class="center-block text-center"><a href="{{ path('show_project', { 'id' : project.id }) }}">{{ project|localizeProject('name') }}</a></h3>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <p>{{ project|localizeProject('description') }}</p>
                    </div>
                </div>

            {% endfor %}



{% endblock %}
